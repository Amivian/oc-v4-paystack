{
    "name": "paystack/opencart4-payment-gateway",
    "description": "Paystack Payment Gateway for OpenCart 4 - Accept payments via Cards, Bank Transfer, USSD, QR Code and more",
    "type": "opencart-extension",
    "keywords": ["paystack", "payment", "gateway", "opencart", "ecommerce", "nigeria", "africa"],
    "homepage": "https://paystack.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Vivian Akpoke",
            "email": "vivian.akpoke@example.com",
            "homepage": "https://github.com/vivianakpoke",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "vivian.akpoke@example.com",
        "docs": "https://github.com/vivianakpoke/paystack-opencart4",
        "source": "https://github.com/vivianakpoke/paystack-opencart4"
    },
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-openssl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Paystack\\OpenCart\\": "system/library/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Paystack\\OpenCart\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 system/ admin/ catalog/",
        "cs-fix": "phpcbf --standard=PSR12 system/ admin/ catalog/"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "opencart": {
            "version": "4.0.0.0",
            "type": "payment",
            "compatibility": "4.0.0.0+"
        }
    }
}
